<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="page-header">
      <h1>Sign up<br>
        <small>Being a member is free! Get exclusive coupons at local dispensaries near you.</small>
      </h1>
      
    </div>
    <br><br>
  </div>
</div>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    
      <%= form_for @user do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :username, "Your desired username." %>
        <%= f.text_field :username, placeholder: 'No weird symbols or spaces.', 
                                    class:'form-control' %>
        <br><br>
        <%= f.label :email, "Your email address." %>
        <%= f.text_field :email, placeholder: "We'll send a confirmation email here.", 
                                 class:'form-control' %>
        <br><br>
        <%= f.label :password %>
        <%= f.password_field :password, class:'form-control',
                              placeholder: 'At least one number and one letter.' %>
        <br><br>
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation, class:'form-control',
                              placeholder: 'One more time.'  %>
        <br><br>
        <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
        <br><br>
      <% end %>
    
  </div>
  <div class="col-md-3"></div>
</div>